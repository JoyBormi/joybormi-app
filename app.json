{
  "expo": {
    "name": "Joy Bormi",
    "slug": "joybormi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "joy-bormi-app",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "CFBundleAllowMixedLocalizations": true,
        "ExpoLocalization_supportsRTL": true
      },
      "bundleIdentifier": "com.joybormi.app",
      "appleTeamId": "A2Y67UR23Z"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.joybormi.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-localization",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash-icon.png",
          "imageWidth": 200,
          "imageHeight": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/Montserrat-Regular.ttf",
            "./src/assets/fonts/Montserrat-Medium.ttf",
            "./src/assets/fonts/Montserrat-Bold.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Montserrat",
                "fontDefinitions": [
                  {
                    "path": "./src/assets/fonts/Montserrat-Regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./src/assets/fonts/Montserrat-Medium.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./src/assets/fonts/Montserrat-Bold.ttf",
                    "weight": 700
                  }
                ]
              }
            ]
          }
        }
      ],
      "expo-web-browser",
      "@react-native-community/datetimepicker"
    ],
    "locales": {
      "en": "./src/locales/en.json",
      "ru": "./src/locales/ru.json",
      "uz": "./src/locales/uz.json"
    },
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "supportsRTL": true
    }
  }
}
